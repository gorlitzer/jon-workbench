# Shared Environment Variables for Voice Assistant Services

# Service Hostnames (for inter-service communication)
OLLAMA_HOST=ollama:11434
WHISPER_HOST=whisper:10300
PIPER_HOST=piper:10200

# Audio Configuration for Jetson Orin Nano
AUDIODEV=default
ALSA_PCM_CARD=0
ALSA_PCM_DEVICE=0
ALSA_MIXER_DEVICE=hw:0,0

# Python Environment
PYTHONPATH=/usr/local/lib/python3.11/site-packages

# Flask Environment
FLASK_ENV=production

# PulseAudio Configuration
PULSE_SERVER=unix:/tmp/pulse-runtime/native
XDG_RUNTIME_DIR=/tmp/pulse-runtime

# NVIDIA GPU Configuration
NVIDIA_VISIBLE_DEVICES=all

# Ollama Configuration
OLLAMA_KEEP_ALIVE=5m0s
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_NUM_PARALLEL=1
OLLAMA_GPU_LAYERS=0
OLLAMA_GPU_MEMORY_FRACTION=0.1

# Wyoming Services Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
PIPER_VOICE=en_US-lessac-medium